<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/actionbar_title_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher" />

        <LinearLayout
            android:id="@+id/actionbar_search"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/actionbar_search_edit_bg"
            android:gravity="center"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/actionbar_search_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/actionbar_search_bar_btn_left" />

            <TextView
                android:id="@+id/actionbar_search_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="大家都在搜梦幻西游" />

            <ImageView
                android:id="@+id/actionbar_search_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/actionbar_title_scan" />
        </LinearLayout>
    </LinearLayout>

    <com.witskies.appmarket.widgets.PagerSlidingTabStrip
        android:id="@+id/fragment_home_indicator"
        android:layout_width="match_parent"
        android:layout_height="28dp" >
    </com.witskies.appmarket.widgets.PagerSlidingTabStrip>

</LinearLayout>